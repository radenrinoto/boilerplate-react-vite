{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./config/*"],
      "@components/*": ["./src/components/*"],
      "@containers/*": ["./src/containers/*"],
      "@domain/*": ["./src/domain/*"],
      "@languages/*": ["./src/languages/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@routes/*": ["./src/routes/*"],
      "@static/*": ["./src/static/*"],
      "@store": ["./src/configureStore.js"],
      "@styles/*": ["./src/styles*"],
      "@utils/*": ["./src/utils/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "build"]
}
